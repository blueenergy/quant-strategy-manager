# Strategy Manager Environment Variables
# Copy this to .env and fill in your actual values (DO NOT COMMIT .env)
# Or set these directly in your shell/docker/k8s environment

# MongoDB Connection
# Example: mongodb://user:pass@host:27017/finance
MONGO_URI=mongodb://localhost:27017

# MongoDB Database Name
MONGO_DB=finance

# Strategy configuration collection name
CONFIG_COLLECTION=watchlist_strategies

# Config reload interval (seconds)
AUTO_RELOAD_INTERVAL=60

# Enable lifecycle management (auto start/stop based on trading hours)
ENABLE_LIFECYCLE=true

# Enable specific engines
ENABLE_VNPY=true
ENABLE_BACKTRADER=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
